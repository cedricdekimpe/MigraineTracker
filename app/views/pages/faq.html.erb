<% content_for :title, t('faq.title') %>
<% content_for :description, t('faq.subtitle') %>

<%
  # Prepare FAQ structured data for GEO
  faq_items = [
    { question: t('faq.data_storage_question'), answer: strip_tags(t('faq.data_storage_answer')) },
    { question: t('faq.gdpr_question'), answer: strip_tags(t('faq.gdpr_answer_html')) },
    { question: t('faq.data_sharing_question'), answer: strip_tags(t('faq.data_sharing_answer')) },
    { question: t('faq.delete_account_question'), answer: strip_tags(t('faq.delete_account_answer_html')) },
    { question: t('faq.export_data_question'), answer: strip_tags(t('faq.export_data_answer')) },
    { question: t('faq.import_data_question'), answer: strip_tags(t('faq.import_data_answer')) },
    { question: t('faq.track_migraine_question'), answer: strip_tags(t('faq.track_migraine_answer')) },
    { question: t('faq.medications_question'), answer: strip_tags(t('faq.medications_answer')) },
    { question: t('faq.statistics_question'), answer: strip_tags(t('faq.statistics_answer')) }
  ]
%>

<div class="mx-auto max-w-3xl">
  <header class="mb-8">
    <h1 class="text-3xl font-bold text-slate-900"><%= t('faq.title') %></h1>
    <p class="mt-2 text-slate-600"><%= t('faq.subtitle') %></p>
  </header>

  <div class="space-y-6">
    <!-- Privacy & Data Section -->
    <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="mb-4 flex items-center gap-2 text-xl font-semibold text-slate-900">
        <svg class="h-5 w-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
        <%= t('faq.privacy_section') %>
      </h2>

      <div class="space-y-4">
        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.data_storage_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <%= t('faq.data_storage_answer') %>
          </div>
        </details>

        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.gdpr_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <%= t('faq.gdpr_answer_html') %>
          </div>
        </details>

        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.data_sharing_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <%= t('faq.data_sharing_answer') %>
          </div>
        </details>
      </div>
    </section>

    <!-- Account Management Section -->
    <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="mb-4 flex items-center gap-2 text-xl font-semibold text-slate-900">
        <svg class="h-5 w-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
        </svg>
        <%= t('faq.account_section') %>
      </h2>

      <div class="space-y-4">
        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.delete_account_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <p><%= t('faq.delete_account_answer_html') %></p>
            <% if user_signed_in? %>
              <p class="mt-3">
                <%= link_to t('faq.go_to_data_settings'), account_data_path, class: "inline-flex items-center gap-1 font-medium text-emerald-600 hover:text-emerald-700" %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </p>
            <% end %>
          </div>
        </details>

        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.export_data_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <p><%= t('faq.export_data_answer') %></p>
            <% if user_signed_in? %>
              <p class="mt-3">
                <%= link_to t('faq.go_to_data_settings'), account_data_path, class: "inline-flex items-center gap-1 font-medium text-emerald-600 hover:text-emerald-700" %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </p>
            <% end %>
          </div>
        </details>

        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.import_data_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <p><%= t('faq.import_data_answer') %></p>
            <% if user_signed_in? %>
              <p class="mt-3">
                <%= link_to t('faq.go_to_data_settings'), account_data_path, class: "inline-flex items-center gap-1 font-medium text-emerald-600 hover:text-emerald-700" %>
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </p>
            <% end %>
          </div>
        </details>
      </div>
    </section>

    <!-- Using the App Section -->
    <section class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
      <h2 class="mb-4 flex items-center gap-2 text-xl font-semibold text-slate-900">
        <svg class="h-5 w-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        <%= t('faq.usage_section') %>
      </h2>

      <div class="space-y-4">
        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.track_migraine_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <%= t('faq.track_migraine_answer') %>
          </div>
        </details>

        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.medications_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <%= t('faq.medications_answer') %>
          </div>
        </details>

        <details class="group rounded-lg border border-slate-200 bg-slate-50">
          <summary class="flex cursor-pointer items-center justify-between px-4 py-3 font-medium text-slate-900">
            <%= t('faq.statistics_question') %>
            <svg class="h-5 w-5 text-slate-500 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="border-t border-slate-200 px-4 py-3 text-sm text-slate-600">
            <%= t('faq.statistics_answer') %>
          </div>
        </details>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="rounded-2xl border border-emerald-200 bg-emerald-50 p-6">
      <h2 class="mb-2 text-lg font-semibold text-emerald-900"><%= t('faq.contact_title') %></h2>
      <p class="text-sm text-emerald-800"><%= t('faq.contact_text') %></p>
    </section>
  </div>

  <div class="mt-8 text-center">
    <%= link_to t('common.back'), root_path, class: "inline-flex items-center gap-2 text-sm font-medium text-slate-600 hover:text-slate-900" %>
  </div>
</div>

<%# FAQPage Structured Data for GEO %>
<script type="application/ld+json">
  <%= raw structured_data_faqpage(faq_items).to_json %>
</script>
