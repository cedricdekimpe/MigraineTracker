<% content_for :title, t('account.data_page_title') %>

<div class="mx-auto flex w-full max-w-5xl flex-col gap-6 lg:flex-row">
  <%# Sidebar Navigation %>
  <aside class="lg:w-64 lg:shrink-0">
    <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
      <h2 class="mb-4 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500"><%= t('account.settings') %></h2>
      <%= render 'account/navigation' %>
    </div>
  </aside>

  <%# Main Content %>
  <main class="flex-1 space-y-6">
    <%# Data Management Section %>
    <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
      <header class="mb-6">
        <h1 class="text-2xl font-semibold text-slate-900"><%= t('account.data_management_title') %></h1>
        <p class="mt-2 text-sm text-slate-500"><%= t('account.data_management_description') %></p>
      </header>

      <div class="grid gap-6 md:grid-cols-2">
        <%# Export Section %>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
          <div class="mb-4 flex items-center gap-3">
            <div class="rounded-full bg-emerald-100 p-2">
              <svg class="h-5 w-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-900"><%= t('account.export_title') %></h3>
          </div>
          <p class="mb-4 text-sm text-slate-600"><%= t('account.export_description') %></p>
          <%= button_to t('account.export_button'), exports_path, 
                method: :post,
                data: { turbo: false },
                class: "w-full rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700" %>
        </div>

        <%# Import Section %>
        <div class="rounded-lg border border-slate-200 bg-slate-50 p-6">
          <div class="mb-4 flex items-center gap-3">
            <div class="rounded-full bg-blue-100 p-2">
              <svg class="h-5 w-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-slate-900"><%= t('account.import_title') %></h3>
          </div>
          <p class="mb-4 text-sm text-slate-600"><%= t('account.import_description') %></p>
          <%= link_to t('account.import_button'), new_import_path, 
                class: "block w-full rounded-md border border-blue-600 bg-white px-4 py-2 text-center text-sm font-semibold text-blue-600 transition hover:bg-blue-50" %>
        </div>
      </div>

      <div class="mt-6 rounded-lg border border-amber-200 bg-amber-50 p-4">
        <div class="flex">
          <svg class="h-5 w-5 flex-shrink-0 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <div class="ml-3">
            <p class="text-sm text-amber-800">
              <strong><%= t('account.backup_warning') %></strong> <%= t('account.backup_text') %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <%# Danger Zone - Account Deletion %>
    <div data-controller="account-deletion" data-account-deletion-confirmation-phrase-value="<%= t('account.delete_confirmation_phrase') %>">
      <div class="rounded-2xl border border-red-200 bg-red-50 p-8 shadow-sm">
        <header class="mb-6">
          <h2 class="flex items-center gap-2 text-xl font-semibold text-red-900">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <%= t('account.danger_zone_title') %>
          </h2>
          <p class="mt-2 text-sm text-red-700"><%= t('account.danger_zone_description') %></p>
        </header>

        <div class="rounded-lg border border-red-200 bg-white p-6">
          <div class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
            <div>
              <h3 class="font-medium text-red-900"><%= t('account.delete_account_title') %></h3>
              <p class="mt-1 text-sm text-red-600"><%= t('account.delete_account_warning') %></p>
              <p class="mt-2 text-sm text-slate-600">
                <%= t('account.data_to_delete') %>
                <strong><%= t('account.migraines_count', count: current_user.migraines.count) %></strong>,
                <strong><%= t('account.medications_count', count: current_user.medications.count) %></strong>
              </p>
            </div>
            <button type="button" 
                    data-action="click->account-deletion#open"
                    class="shrink-0 rounded-md border border-red-300 bg-white px-4 py-2 text-sm font-semibold text-red-600 transition hover:bg-red-50 hover:border-red-400">
              <%= t('account.delete_my_account') %>
            </button>
          </div>
        </div>
      </div>

      <%# Account Deletion Modal %>
      <div data-account-deletion-target="modal" 
           data-action="click->account-deletion#closeBackground keydown.esc@window->account-deletion#close"
           class="hidden fixed inset-0 z-50 flex items-center justify-center bg-slate-900/50 p-4">
        <div class="w-full max-w-md rounded-xl border border-slate-200 bg-white p-6 shadow-xl"
             data-action="click->account-deletion#stopPropagation">
          <div class="mb-6">
            <div class="mx-auto mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-red-100">
              <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
              </svg>
            </div>
            <h3 class="text-center text-lg font-semibold text-slate-900"><%= t('account.delete_modal_title') %></h3>
            <p class="mt-2 text-center text-sm text-slate-600"><%= t('account.delete_modal_description') %></p>
          </div>

          <div class="mb-4 rounded-lg border border-red-200 bg-red-50 p-4">
            <p class="text-sm text-red-800">
              <strong><%= t('account.delete_modal_warning') %></strong>
            </p>
            <ul class="mt-2 list-inside list-disc text-sm text-red-700">
              <li><%= t('account.migraines_count', count: current_user.migraines.count) %></li>
              <li><%= t('account.medications_count', count: current_user.medications.count) %></li>
              <li><%= t('account.delete_modal_account_info') %></li>
            </ul>
          </div>

          <%= form_with url: registration_path(:user), method: :delete, data: { turbo: false }, class: "space-y-4" do |form| %>
            <div>
              <label class="block text-sm font-medium text-slate-700">
                <%= t('account.delete_modal_type_phrase') %>
                <code class="ml-1 rounded bg-slate-100 px-2 py-0.5 text-sm font-bold text-red-600"><%= t('account.delete_confirmation_phrase') %></code>
              </label>
              <input type="text" 
                     data-account-deletion-target="confirmationInput"
                     data-action="input->account-deletion#validateConfirmation"
                     autocomplete="off"
                     class="mt-2 block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-red-500 focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>

            <div>
              <label class="block text-sm font-medium text-slate-700"><%= t('account.delete_modal_password') %></label>
              <input type="password" 
                     name="password"
                     data-account-deletion-target="passwordInput"
                     data-action="input->account-deletion#validateConfirmation"
                     autocomplete="current-password"
                     class="mt-2 block w-full rounded-md border border-slate-300 px-3 py-2 text-slate-900 shadow-sm focus:border-red-500 focus:outline-none focus:ring-2 focus:ring-red-500">
            </div>

            <div class="flex gap-3 pt-2">
              <button type="button" 
                      data-action="click->account-deletion#close"
                      class="flex-1 rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-50">
                <%= t('common.cancel') %>
              </button>
              <button type="submit" 
                      disabled
                      data-account-deletion-target="submitButton"
                      class="flex-1 rounded-md bg-red-600 px-4 py-2 text-sm font-semibold text-white opacity-50 cursor-not-allowed transition">
                <%= t('account.delete_account_permanently') %>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
