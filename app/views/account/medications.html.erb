<% content_for :title, t('account.medications_page_title') %>

<div class="mx-auto flex w-full max-w-5xl flex-col gap-6 lg:flex-row">
  <%# Sidebar Navigation %>
  <aside class="lg:w-64 lg:shrink-0">
    <div class="rounded-2xl border border-slate-200 bg-white p-4 shadow-sm">
      <h2 class="mb-4 px-3 text-xs font-semibold uppercase tracking-wider text-slate-500"><%= t('account.settings') %></h2>
      <%= render 'account/navigation' %>
    </div>
  </aside>

  <%# Main Content %>
  <main class="flex-1">
    <div class="rounded-2xl border border-slate-200 bg-white p-8 shadow-sm">
      <header class="mb-6">
        <h1 class="text-2xl font-semibold text-slate-900"><%= t('account.medications_title') %></h1>
        <p class="mt-2 text-sm text-slate-500"><%= t('account.medications_description') %></p>
      </header>

      <div class="space-y-4">
        <% if @medications.any? %>
          <ul class="space-y-3">
            <% @medications.each do |medication| %>
              <li class="flex items-center justify-between rounded-lg border border-slate-200 px-4 py-3">
                <div>
                  <p class="text-sm font-medium text-slate-900"><%= medication.name %></p>
                </div>
                <%= button_to t('common.delete'), medication_path(medication), method: :delete, data: { turbo_confirm: "#{t('common.delete')} #{medication.name}?" }, class: "rounded-md border border-slate-300 bg-white px-3 py-1.5 text-sm font-medium text-slate-700 transition hover:border-rose-300 hover:text-rose-600" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <div class="rounded-md border border-dashed border-slate-300 px-4 py-8 text-center">
            <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
            </svg>
            <p class="mt-4 text-sm text-slate-500"><%= t('account.no_medications') %></p>
            <p class="mt-1 text-xs text-slate-400"><%= t('account.no_medications_hint') %></p>
          </div>
        <% end %>

        <div class="border-t border-slate-200 pt-6">
          <h3 class="mb-4 text-sm font-medium text-slate-900"><%= t('account.add_new_medication') %></h3>
          <%= form_with model: Medication.new, url: medications_path, data: { turbo: false }, class: "flex flex-col gap-3 sm:flex-row" do |form| %>
            <%= form.label :name, t('account.medication_name'), class: "sr-only" %>
            <%= form.text_field :name, placeholder: t('account.medication_name'), class: "flex-1 rounded-md border border-slate-300 px-3 py-2 text-sm text-slate-900 shadow-sm focus:border-emerald-500 focus:outline-none focus:ring-2 focus:ring-emerald-500" %>
            <%= form.submit t('account.add'), class: "rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700 cursor-pointer" %>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
