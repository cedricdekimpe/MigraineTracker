<% content_for :title, t('home.tagline') %>
<% content_for :description, t('home.description') %>

<article class="mx-auto flex max-w-5xl flex-col gap-12" itemscope itemtype="https://schema.org/SoftwareApplication">
  <header class="text-center">
    <p class="text-sm font-semibold uppercase tracking-wide text-emerald-600">Migraine Tracker</p>
    <h1 class="mt-3 text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl" itemprop="name"><%= t('home.tagline') %></h1>
    <p class="mt-4 text-lg leading-7 text-slate-600" itemprop="description">
      <%= t('home.description') %>
    </p>
  </header>

  <section class="grid gap-8 rounded-3xl border border-slate-200 bg-white p-8 shadow-sm sm:grid-cols-3">
    <article itemscope itemtype="https://schema.org/Feature">
      <h2 class="text-base font-semibold text-slate-900" itemprop="name"><%= t('home.feature_calendars_title') %></h2>
      <p class="mt-2 text-sm leading-6 text-slate-600" itemprop="description">
        <%= t('home.feature_calendars_desc') %>
      </p>
    </article>
    <article itemscope itemtype="https://schema.org/Feature">
      <h2 class="text-base font-semibold text-slate-900" itemprop="name"><%= t('home.feature_medication_title') %></h2>
      <p class="mt-2 text-sm leading-6 text-slate-600" itemprop="description">
        <%= t('home.feature_medication_desc') %>
      </p>
    </article>
    <article itemscope itemtype="https://schema.org/Feature">
      <h2 class="text-base font-semibold text-slate-900" itemprop="name"><%= t('home.feature_secure_title') %></h2>
      <p class="mt-2 text-sm leading-6 text-slate-600" itemprop="description">
        <%= t('home.feature_secure_desc') %>
      </p>
    </article>
  </section>

  <div class="flex flex-col items-center gap-6 rounded-3xl bg-emerald-50 p-8 text-center">
    <h2 class="text-2xl font-semibold text-emerald-900"><%= t('home.cta_title') %></h2>
    <p class="max-w-2xl text-base leading-relaxed text-emerald-800">
      <%= t('home.cta_description') %>
    </p>

    <% if user_signed_in? %>
      <div class="flex flex-wrap justify-center gap-3">
        <%= link_to t('home.view_calendar'), migraines_path, class: "rounded-lg bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700" %>
        <%= link_to t('home.manage_medications'), edit_user_registration_path(anchor: "medications"), class: "rounded-lg border border-emerald-200 bg-white px-4 py-2 text-sm font-medium text-emerald-700 shadow-sm transition hover:border-emerald-300 hover:text-emerald-900" %>
      </div>
    <% else %>
      <div class="flex flex-wrap justify-center gap-3">
        <%= link_to t('navigation.create_account'), new_user_registration_path, class: "rounded-lg bg-emerald-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-emerald-700" %>
        <%= link_to t('navigation.sign_in'), new_user_session_path, class: "rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 shadow-sm transition hover:border-slate-400 hover:text-slate-900" %>
      </div>
    <% end %>
  </div>
</article>
