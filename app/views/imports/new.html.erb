<% content_for :title, "Import Data" %>

<section class="mx-auto w-full max-w-2xl rounded-xl border border-slate-200 bg-white p-8 shadow-sm">
  <header class="mb-6">
    <h1 class="text-2xl font-semibold text-slate-900">Import migraine data</h1>
    <p class="mt-2 text-sm text-slate-500">Upload a JSON export file to restore your migraine and medication data</p>
  </header>

  <div class="mb-6 rounded-lg border border-amber-200 bg-amber-50 p-4">
    <div class="flex">
      <svg class="h-5 w-5 flex-shrink-0 text-amber-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-amber-800">Important notes</h3>
        <ul class="mt-2 list-disc space-y-1 pl-5 text-sm text-amber-700">
          <li>Only JSON files exported from this application are supported</li>
          <li>Existing entries for the same dates will be skipped</li>
          <li>Medications with the same name will be merged</li>
          <li>This action cannot be undone</li>
        </ul>
      </div>
    </div>
  </div>

  <%= form_with url: imports_path, multipart: true, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :file, "Select JSON file", class: "block text-sm font-medium text-slate-700" %>
      <div class="mt-2">
        <%= form.file_field :file, 
              accept: "application/json,.json",
              required: true,
              class: "block w-full text-sm text-slate-500 file:mr-4 file:rounded-md file:border-0 file:bg-emerald-50 file:px-4 file:py-2 file:text-sm file:font-semibold file:text-emerald-700 hover:file:bg-emerald-100" %>
      </div>
      <p class="mt-2 text-xs text-slate-500">Upload a .json file previously exported from your account</p>
    </div>

    <div class="flex gap-3 border-t border-slate-200 pt-6">
      <%= link_to "Cancel", edit_user_registration_path, 
            class: "rounded-md border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 transition hover:bg-slate-50" %>
      <%= form.submit "Import Data", 
            data: { confirm: "Are you sure you want to import this data? This will add new entries to your account." },
            class: "rounded-md bg-emerald-600 px-4 py-2 text-sm font-semibold text-white transition hover:bg-emerald-700" %>
    </div>
  <% end %>

  <div class="mt-8 rounded-lg border border-slate-200 bg-slate-50 p-4">
    <h3 class="text-sm font-medium text-slate-900">Need to export your data?</h3>
    <p class="mt-1 text-sm text-slate-600">You can create a backup of your data from your account settings page.</p>
    <%= link_to "Go to Account Settings", edit_user_registration_path, class: "mt-2 inline-block text-sm font-medium text-emerald-700 hover:text-emerald-800" %>
  </div>
</section>
